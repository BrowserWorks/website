{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"semi": false,
	"printWidth": 100,
	"plugins": [
		"prettier-plugin-astro",
		"prettier-plugin-tailwindcss"
	],
	"tailwindConfig": "./tailwind.config.cjs",
	"tailwindFunctions": [
		"twMerge",
		"tv"
	],
	"pluginSearchDirs": false,
	"astroAllowShorthand": true,
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		}
	]
}